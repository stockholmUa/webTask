<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "C:\IdeaWorkspace\webTask\src\main\resources\log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false"> 
    
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" 			value="System.out"/>
      	<layout class="org.apache.log4j.PatternLayout">
        	<param name="ConversionPattern" value="demo-webtasks>> %d{dd MMM yyyy HH:mm:ss,SSS} %-5p [%t] (%c{1}) %m%n"/>
  		</layout>
	</appender>
	
	<appender name="FILE" class="org.apache.log4j.RollingFileAppender">
		<param name="File" 				value="/var/ethersend/ethersend.log"/>
		<param name="MaxFileSize" 		value="10000KB"/>
		<param name="MaxBackupIndex" 	value="10"/>
		<param name="Append" 			value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="demo-webtasks>> %d{dd MMM yyyy HH:mm:ss,SSS} %-5p [%t] (%c{1}) %m%n"/>
		</layout>	    
	</appender>
	
	<appender name="ASYNC" class="org.apache.log4j.AsyncAppender">
		<param name="BufferSize" value="256"/>
    	<appender-ref ref="CONSOLE"/>
    	<!--appender-ref ref="FILE"/-->	    
	</appender>
	
	<logger name="com.sourceit.webtasks.listeners.WebtasksSessionListener">
		<level value="DEBUG" />
	</logger>
	
	<logger name="com.sourceit.webtasks.listeners.WebtasksSessionAttributesListener">
		<level value="DEBUG" />
	</logger>
	
	<logger name="com.sourceit.webtasks.model.Account">
		<level value="DEBUG" />
	</logger>
	
	<root>
    	<priority value="INFO"/>
    	<appender-ref ref="ASYNC"/>
	</root>
   
</log4j:configuration>
